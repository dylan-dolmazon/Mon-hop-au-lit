{% extends 'base.html.twig' %}

{% block title %}Icon index{% endblock %}

{% block body %}
    <h1>Icon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for icon in icons %}
            <tr>
                <td>{{ icon.id }}</td>
                <td>{{ icon.name }}</td>
                <td>{{ icon.value|raw }}</td>
                <td>
                    <a href="{{ path('app_icon_show', {'id': icon.id}) }}">show</a>
                    <a href="{{ path('app_icon_edit', {'id': icon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_icon_new') }}">Create new</a>
{% endblock %}
