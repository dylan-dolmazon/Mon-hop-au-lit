{% extends 'base.html.twig' %}

{% block title %}Luck index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Luck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for luck in lucks %}
            <tr>
                <td>{{ luck.id }}</td>
                <td>{{ luck.description }}</td>
                <td>
                    <a href="{{ path('app_luck_show', {'id': luck.id}) }}">show</a>
